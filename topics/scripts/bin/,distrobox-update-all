#!/usr/bin/env bash

distroboxes=( "fbox" )

case "$HOSTNAME" in
    trantor) ;;
    *) echo "Hostname: '$HOSTNAME' cannot run this script." >&2; exit 1;;
esac

set -eu -o pipefail
for _distrobox in "${distroboxes[@]}"; do
    echo "Updating $_distrobox ..."
    distrobox-stop --yes "$_distrobox"
    distrobox-rm --yes "$_distrobox"
    distrobox-create --yes "$_distrobox"
done
