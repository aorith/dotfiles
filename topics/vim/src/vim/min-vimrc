" vim: ft=vim

set nocompatible

let skip_defaults_vim=1
set viminfo=""

set nonumber
set nolist
set backspace=indent,eol,start
set laststatus=1
set showtabline=0
set foldcolumn=0
set hlsearch
set incsearch
set ignorecase
set smartcase
set noerrorbells
set noswapfile
set nobackup
set noundofile
set wildmenu
set clipboard+=unnamed,unnamedplus
set ruler

map <F1> <nop>
map! <F1> <nop>
map <silent> q :qa!<CR>

set background=dark
