# vim: ft=bash

[[ "$(basename -- "$(ps -o comm= -p $PPID)")" == "tmux" ]] && export IN_TMUX=1 || unset IN_TMUX

if [[ "$TERM" == "tmux-256color" ]]; then
    # remote hosts usually don't have tmux-256color terminfo
    export SSH_TERM="xterm-256color"
fi

if [[ "$_OS" == "Darwin" ]]; then
    export TMUX_CLIPBOARD="pbcopy"
else
    export TMUX_CLIPBOARD="xclip"
fi

