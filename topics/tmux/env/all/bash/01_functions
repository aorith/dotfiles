# vim: ft=bash

# tmux
tmux() {
    local EXE
    EXE='command tmux'
    #EXE="$HOME/opt/bin/tmux"
    if [[ $# -ne 0 ]]; then $EXE -u "$@"
    elif ! $EXE -u attach; then $EXE -u; fi
}

ssh() {
    local EXE
    EXE='command ssh'
    if [[ -n "$SSH_CLIENT" ]]; then $EXE "$@"
    else TERM="xterm-256color" $EXE "$@"; fi
}
