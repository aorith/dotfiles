#!/bin/bash

pane_info="$(tmux list-panes -F "#{pane_height}:#{scroll_position}:#{?pane_in_mode,1,0}")"
pane_height="$(echo $pane_info | cut -d: -f1)"
pane_scroll_position="$(echo $pane_info | cut -d: -f2)"
pane_in_copy_mode="$(echo $pane_info | cut -d: -f3)"

if [[ "$pane_in_copy_mode" == "1" ]]; then
	start_capture=$((-$pane_scroll_position))
	end_capture=$(($pane_height - $pane_scroll_position - 1))
else
	start_capture=0
	end_capture="-"
fi

tmux capture-pane -b ${1} -E $end_capture -S $start_capture
