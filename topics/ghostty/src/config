# vim: ft=conf

term = xterm-256color
auto-update = off
macos-option-as-alt = left
copy-on-select = clipboard
maximize = true
macos-non-native-fullscreen = visible-menu
fullscreen = true
scrollback-limit = 1024
shell-integration = none

font-size = 16
adjust-cell-height = 12%
adjust-cursor-height = 12%

# font-family = "Aporetic Sans Mono"
# font-family = "JetBrains Mono NL"
# font-family = "Hack Nerd Font Mono"
# font-family = "IBM Plex Mono"
font-family = "Iosevka Term"
# font-family = "Source Code Pro"

font-family = "Hack Nerd Font Mono"

# To generally disable most ligatures, use `-calt, -liga, -dlig`.
font-feature = -calt, -liga, -dlig

# theme = "nord"
# background = "#262c38"
# foreground = "#d8dee9"
cursor-invert-fg-bg = true

# Keybinds - NOTE: inline comments not allowed!
keybind = clear

keybind = f12=toggle_fullscreen
keybind = super+q=quit
keybind = super+shift+n=new_window
keybind = super+shift+g=reload_config

keybind = alt+left=esc:b
keybind = alt+right=esc:f

keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard
keybind = super+shift+v=paste_from_selection

keybind = super+zero=reset_font_size
keybind = super+equal=increase_font_size:1
keybind = super+plus=increase_font_size:1
keybind = super+minus=decrease_font_size:1

# To view hex code keys:
# xxd -psg
# press the keys then press enter

keybind = alt+space=text:\x20
keybind = super+space=text:\x20

keybind = super+w=text:\x02x
keybind = super+t=text:\x02c
keybind = super+shift+t=text:\x02C

keybind = super+h=text:\x02h
keybind = super+j=text:\x02j
keybind = super+k=text:\x02k
keybind = super+l=text:\x02l

keybind = super+shift+h=text:\x02H
keybind = super+shift+j=text:\x02J
keybind = super+shift+k=text:\x02K
keybind = super+shift+l=text:\x02L

keybind = super+left=text:\x02\x08
keybind = super+down=text:\x02\x0a
keybind = super+up=text:\x02\x0b
keybind = super+right=text:\x02\x0c

keybind = super+shift+enter=text:\x02\x20
keybind = super+d=text:\x02\x25
keybind = super+shift+d=text:\x02\x22
keybind = super+s=text:\x02s

keybind = super+1=text:\x021
